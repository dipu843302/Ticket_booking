<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#551947"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Fly to Seoul"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:drawableStart="@drawable/ic_baseline_arrow_back_24"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:drawablePadding="50dp"
            android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginLeft="20dp" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:hint="@string/_1_adult_economy"
                android:textColorHint="@color/white"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:drawablePadding="20dp"
                android:drawableStart="@drawable/ic_baseline_person_24"
                android:backgroundTint="@color/white"
                android:textSize="25dp"
                android:drawableLeft="@drawable/ic_baseline_person_24" /><![CDATA[


        />

        android:textSize="25dp" />



        ]]>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@color/white"
            android:drawableStart="@drawable/ic_baseline_location_on_24"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="20dp"
            android:hint="@string/seoul_korea"
            android:textColorHint="@color/white"
            android:textSize="25dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@color/white"
            android:drawableStart="@drawable/ic_baseline_flight_24"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="20dp"
            android:hint="@string/choose_destination"
            android:textColorHint="@color/white"
            android:textSize="25dp" />

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:hint="@string/select_dates"
                android:textColorHint="@color/white"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:drawablePadding="20dp"
                android:drawableStart="@drawable/ic_baseline_date_range_24"
                android:backgroundTint="@color/white"
                android:textSize="25dp"
                android:drawableLeft="@drawable/ic_baseline_person_24" /><![CDATA[

        android:textSize="25dp" />
        ]]>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlAsia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imgAsia"
            android:layout_width="121dp"
            android:layout_height="87dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:src="@drawable/khumbu_valley_1" />

        <TextView
            android:id="@+id/tvMaldives"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="150dp"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/imgAsia"
            android:layout_toRightOf="@+id/imgAsia"
            android:text="Maldives,South Asia"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/imgAsia2"
            android:layout_width="121dp"
            android:layout_height="103dp"

            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="112dp"
            android:padding="10dp"
            android:src="@drawable/maldives_2" />

        <TextView
            android:id="@+id/tvMaldives2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@+id/imgAsia"
            android:layout_toRightOf="@+id/imgAsia"
            android:text="@string/khumbu_valley_nepal"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMaldives"
            android:layout_marginStart="79dp"
            android:layout_marginLeft="79dp"
            android:layout_marginTop="-139dp"
            android:layout_toEndOf="@id/imgAsia2"
            android:layout_toRightOf="@id/imgAsia"
            android:text="NonStop - 8h 24m+"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="152dp"
            android:layout_height="39dp"
            android:layout_below="@+id/tvMaldives2"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="61dp"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@+id/imgAsia"
            android:text="NonStop - 5h 16m+"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/imgAsia" />

    </RelativeLayout>
</LinearLayout>

